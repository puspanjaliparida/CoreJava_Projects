package com.nit;

public class CustomerTester {
	public static void main(String[] args) {
		//Customer1
		Customer cust1=new Customer();
		cust1.setCustomerName("John Doe");
		cust1.setMonthlySpending(7000);
		cust1.displayDetails();
		     
		CardType card1=new CardType();
		card1.setCardName("Silver");
		System.out.println(card1.getCardTypes(cust1));
		
		Customer cust2=new Customer();
		cust2.setCustomerName("Jane Smith");
		cust2.setMonthlySpending(28000);
		cust2.displayDetails();
		     
		CardType card2=new CardType();
		card2.setCardName("Gold");
		System.out.println(card2.getCardTypes(cust1));
		
		Customer cust3=new Customer();
		cust3.setCustomerName("Alice Brown");
		cust3.setMonthlySpending(120000);
		cust3.displayDetails();
		     
		CardType card3=new CardType();
		card3.setCardName("Platinum");
		System.out.println(card3.getCardTypes(cust1));
		
	}
}
